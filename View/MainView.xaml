<Window x:Class="Skreenkinikor_Project.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Skreenkinikor_Project.View"
        xmlns:viewModel="clr-namespace:Skreenkinikor_Project.ViewModel"
        xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainView" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius = "15"
                BorderThickness="3">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint = "0,0" EndPoint = "1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.75"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <!--Nav Menu-->
                <ColumnDefinition Width="250"/>
                <!--Content-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Nav Menu Color Gradient-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                        <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <!--LOGO COMES HERE-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">
                        <Image Source="/Images/SK_Logo.png" Height="50" Width="50" Margin="0,-5,0,0"/>
                        <TextBlock Text="Skreenkinikor"
                                   Foreground="{StaticResource titleColor1}"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <!--MENU BUTTONS-->
                    <!--Home Nav Button-->
                    <RadioButton Style="{StaticResource navMenuButton1}"
                                 Tag="{StaticResource color1}"
                                 IsChecked="True">
                        <StackPanel Orientation="Horizontal">
                            <icon:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Home" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <!--Movies Nav Button-->
                    <RadioButton Style="{StaticResource navMenuButton1}"
                                 Tag="{StaticResource color1}">
                        <StackPanel Orientation="Horizontal">
                            <icon:IconImage Icon="Video" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Movies" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <!--Actors Nav Button-->
                    <RadioButton Style="{StaticResource navMenuButton1}"
                                 Tag="{StaticResource color1}">
                        <StackPanel Orientation="Horizontal">
                            <icon:IconImage Icon="Person" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Actors" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <!--Confec Nav Button-->
                    <RadioButton Style="{StaticResource navMenuButton1}"
                                 Tag="{StaticResource color1}">
                        <StackPanel Orientation="Horizontal">
                            <icon:IconImage Icon="BowlFood" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Confectionary" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <!--Reports Nav Button-->
                    <RadioButton Style="{StaticResource navMenuButton1}"
                                 Tag="{StaticResource color1}">
                        <StackPanel Orientation="Horizontal">
                            <icon:IconImage Icon="File" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Reports" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <!--Settings Nav Button-->
                    <RadioButton Style="{StaticResource navMenuButton1}"
                                 Tag="{StaticResource color1}">
                        <StackPanel Orientation="Horizontal">
                            <icon:IconImage Icon="Gears" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Settings" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>
            <!--Content Area-->
            
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                        <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="25"/>
                        <!--Header bar-->
                        <RowDefinition Height="35"/>
                        <!--Window section-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Control-->
                    <StackPanel x:Name="pnlControl"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControl_MouseLeftButtonDown"
                                MouseEnter="pnlControl_MouseEnter">
                        <Button x:Name="btnClose"
                                Style="{StaticResource controlBarButton1}"
                                Tag="{StaticResource buttonColor3}"
                                Click="btnClose_Click">
                            <icon:IconImage Icon="Xmark" Style="{StaticResource controlBarButtonIcon1}"/>
                        </Button>
                        <Button x:Name="btnMax"
                                Style="{StaticResource controlBarButton2}"
                                Tag="{StaticResource buttonColor2}"
                                Click="btnMax_Click">
                            <icon:IconImage Icon="Square" Style="{StaticResource controlBarButtonIcon2}"/>
                        </Button>
                        <Button x:Name="btnMin"
                                Style="{StaticResource controlBarButton2}"
                                Tag="{StaticResource buttonColor2}"
                                Click="btnMin_Click">
                            <icon:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlBarButtonIcon2}"/>
                        </Button>
                    </StackPanel>
                    <!--Header content-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!--Title section-->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <icon:IconImage Icon="Home"
                                            Height="20"
                                            Width="20"
                                            Foreground="{StaticResource titleColor1}"
                                            Margin="35,0,10,0"/>
                            <TextBlock Text="Home"
                                       Foreground="{StaticResource titleColor1}"
                                       FontSize="16"
                                       FontFamily="Montserrat"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <!--Userinfo section-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            <Button Style="{StaticResource userControlButton}"
                                    Tag="{StaticResource buttonColor1}">
                                <icon:IconImage Icon="AngleDown" Width="12" Style="{StaticResource userControlIcon}"/>
                            </Button>

                            <TextBlock Text="{Binding CurrentUser.DisplayUser}"
                                       Foreground="{StaticResource titleColor1}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    <!--Window section-->
                    <ContentControl Content=""
                                    Grid.Row="2"
                                    Margin="15"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
